<h1>ログイン</h1>

<%= form_with url: login_path, scope: :session, local: true do |f| %>
  <div>
    <%= f.label :mail_address, 'メールアドレス' %><br>
    <%= f.text_field :mail_address %>
  </div>
  <div>
    <%= f.label :password, 'パスワード' %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit 'ログイン' %>
  </div>
<% end %>
